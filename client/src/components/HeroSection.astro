---
import Container from "./Container.astro"

---
<script>
    import { homeEmail } from '../store.js'

    document.addEventListener('DOMContentLoaded', function () {
    const getStartedButton = document.querySelector('#getStartedButton');
    const emailInput = document.querySelector('#emailFeild');

        if (getStartedButton) {
            getStartedButton.addEventListener('click', function (event) {
                event.preventDefault();
                if (emailInput && emailInput.value.trim() !== "") {
                    homeEmail.set(emailInput.value);
                    console.log(homeEmail.get());
                    window.location.href = '/register';
                } else {
                    window.location.href = '/register';
                }
            });
        }
    });

</script>



<div class="relative" id="home">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <Container>
        <div class="relative pt-36 ml-auto">
            <div class="lg:w-2/3 text-center mx-auto">
                <h1 class="text-gray-900 dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl">Studying â€” <br><span class="text-primary dark:text-white"> made simple.</span></h1>
                <p class="mt-8 text-gray-700 dark:text-gray-300">Revolutionize the way you study. Elevate your learning by practicing our meticulously crafted, auto-generated, and auto-graded rules of inference problems. Learn, connect, and grow! </p>
                <div class="flex justify-center">                  
                  <form action="" class="w-2/3 mt-12">
                      <div class="relative flex items-center px-2 p-1 rounded-full bg-white dark:bg-gray-900 border dark:border-gray-700 border-primary/10 shadow-md md:p-2 lg:pr-3">
                          <div class="pl-6 py-3">
